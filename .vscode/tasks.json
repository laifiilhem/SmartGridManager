{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g",
                "-std=c++17",
                "-Wall",
                "-Wextra",
                "-I${workspaceFolder}/src",
                "${workspaceFolder}/src/*.cpp",
                "-o",
                "${workspaceFolder}/bin/smart-grid"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"],
            "detail": "Compilation du projet Smart Grid"
        }
    ]
}